{
  "name": "page-designer",
  "version": "0.0.3-alpha.16",
  "repository": {
    "type": "git",
    "url": "https://github.com/blocklang/page-designer.git"
  },
  "scripts": {
    "dev": "dojo build --mode dev --watch --serve",
    "build:app": "dojo build --mode dist",
    "build:dev": "dojo build --mode dev",
    "build:lib": "dojo build widget --mode dist --target lib && shx cp -r output/dist/* dist/",
    "build:lib:legacy": "dojo build widget --mode dist --target lib -l && shx cp -r output/dist/* dist/",
    "build:test": "dojo build widget -m unit",
    "clean": "shx rm -rf dist && shx mkdir dist",
    "build": "npm run clean && npm run build:lib && npm run build:lib:legacy && shx cp package.json dist/ && shx cp README.md dist/",
    "test": "dojo test",
    "test:unit": "dojo build --mode unit && dojo test --unit --config local",
    "test:functional": "dojo build --mode functional && dojo test --functional --config local",
    "test:all": "dojo build --mode unit && dojo build --mode functional && dojo test --all --config local",
    "test:headless": "dojo test -u -c headless",
    "test:ci": "run-s build:test test:headless",
    "prettier": "prettier --write \"{src,tests}/**/*.{ts,tsx,css}\"",
    "uploadCoverage": "codecov --file=coverage/coverage.json",
    "json-server": "json-server --watch json-server/db.json --routes json-server/routes.json",
    "serve": "cd serve && serve -l 3001"
  },
  "dependencies": {
    "@tanem/svg-injector": "^8.0.49",
    "@types/jquery": "^3.3.35",
    "@types/scriptjs": "^0.0.2",
    "bootstrap-classes": "~0.0.3-alpha.6",
    "designer-core": "~0.0.1-alpha.83",
    "dojo-fontawesome": "^0.0.3-alpha.1",
    "jquery": "^3.5.0",
    "popper.js": "^1.16.1",
    "scriptjs": "^2.5.9",
    "std-ide-widget": "~0.0.3-alpha.21",
    "tslib": "~1.11.1"
  },
  "peerDependencies": {
    "@dojo/framework": "^6.0.4",
    "bootstrap": "^4.4.1",
    "std-widget-web": "^0.0.6-alpha.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@dojo/cli": "^6.0.0",
    "@dojo/cli-build-app": "^6.0.9",
    "@dojo/cli-build-widget": "^6.0.2",
    "@dojo/cli-test-intern": "^6.0.1",
    "@dojo/framework": "^6.0.4",
    "@dojo/themes": "^6.0.0",
    "@types/node": "^9.6.55",
    "@types/sinon": "^9.0.0",
    "bootstrap": "^4.4.1",
    "codecov": "^3.6.5",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "shx": "^0.3.2",
    "sinon": "^9.0.2",
    "typescript": "~3.4.5"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": false,
    "tabWidth": 4,
    "useTabs": true,
    "printWidth": 120,
    "arrowParens": "always"
  }
}
